{
  "type": "object",
  "additionalProperties": false,
  "options": {
    "disable_collapse": true,
    "disable_properties": true
  },
  "required": [
    "DOMAIN",
    "TOPO_SOURCE",
    "GRID_TYPE",
    "VLEV",
    "VERT_DISC",
    "LGRADSP"
  ],
  "properties": {
    "DOMAIN": {
      "$ref": "domain.schema.json"
    },
    "TOPO_SOURCE": {
      "type": "string",
      "title": "Input source for orography",
      "enum": [
        "gmted2010",
        "gtopo30"
      ],
      "default": "gmted2010"
    },
    "GRID_TYPE": {
      "type": "string",
      "title": "Type of grid",
      "enum": [
        "LINEAR",
        "QUADRATIC",
        "CUBIC"
      ],
      "default": "LINEAR"
    },
    "VLEV": {
      "type": "string",
      "title": "Vertical level definition",
      "enum": [
        "ECMWF_90",
        "HMS_49",
        "ECMWF_60",
        "HIRLAM_40",
        "HIRLAM_60",
        "MF_60",
        "MF_70",
        "MF_90",
        "40",
        "65",
        "Prague_87",
        "37"
      ],
      "default": "65"
    },
    "VERT_DISC": {
      "type": "string",
      "description": "Discretization in the vertical. Note that vfe does not yet work in non-hydrostatic mode",
      "enum": [
        "vfd",
        "vfe"
      ],
      "default": "vfd"
    },
    "LGRADSP": {
      "type": "string",
      "description": "Apply Wedi/Hortal vorticity dealiasing",
      "enum": [
        "yes",
        "no"
      ],
      "default": "yes"
    }
  }
}